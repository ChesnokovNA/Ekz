<Window x:Class="Ekz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ekz"
        mc:Ignorable="d"
        Title="Chesnokov" Height="292" Width="510" ResizeMode="CanMinimize">
    <Canvas >
        <TextBlock Text="Авторизация" FontSize="18" Canvas.Left="55" Canvas.Top="19" FontWeight="Bold"/>
        <TextBlock Text="Логин" FontSize="16" Canvas.Left="10" Canvas.Top="63" FontWeight="Bold"/>
        <TextBox x:Name="tbLog" Width="150" FontSize="16" Canvas.Left="85" Canvas.Top="63"/>
        <TextBlock Text="Пароль" FontSize="16" Canvas.Left="10" Canvas.Top="108" FontWeight="Bold"/>
        <PasswordBox x:Name="tbPass" Width="150" FontSize="16" Canvas.Left="85" Canvas.Top="106"/>
        <Button x:Name="btVhod" Content="Войти" FontWeight="Bold" FontSize="18" Canvas.Left="10" Canvas.Top="148" Width="225" Height="40" Click="btVhod_Click"/>
        <Button x:Name="btReg" Content="Регистрация" FontWeight="Bold" FontSize="16" Canvas.Left="10" Canvas.Top="203" Width="225" Height="40" Click="btReg_Click"/>
        <Image Source="DPT.png" Canvas.Left="246" Canvas.Top="10" Height="243" Width="248" ></Image>
    </Canvas>
</Window>
